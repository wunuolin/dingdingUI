.btn-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btn-container button {
  width: 300rpx;
}

.box.top, .box.bottom {
  height: 550rpx;
}

.box.left, .box.right {
  width: 300rpx;
  height: 100%;
}

.box {
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}